---
import MainLayout from '../layouts/MainLayout.astro';
import ThemeToggle from '../components/ThemeToggle.astro';
import LinkCard from '../components/LinkCard.astro';

const links = [
  {
    title: 'Instagram',
    url: 'https://www.instagram.com/indumentaria.kaya/',
    icon: 'ri:instagram-line'
  },
  {
    title: 'WhatsApp',
    url: 'https://api.whatsapp.com/send?phone=5491136962811&text=Hola%20quisiera%20contactarme%20con%20ustedes',
    icon: 'ri:whatsapp-line'
  },
  {
    title: 'Página web (próximamente)',
    url: '#',
    icon: 'ri:facebook-box-line'
  }
];
---

<MainLayout title="Kaya Ind-Linktree">
  <div class="container">
    <ThemeToggle />
    
    <header>
      <div class="profile-container">
        <img src="/public/kaya.ind-negro fotoperfil circ.png" alt="Profile" class="profile-img">
      </div>
      <h1>KAYA INDUMENTARIA</h1>
      <p>✧ vanguardia en estilo ✧</p>
    </header>

    <main>
      {links.map(link => <LinkCard {...link} />)}
    </main>

    <footer>
      <p>✧ Hecho con ♥️ ✧</p>
    </footer>
  </div>
</MainLayout>

<style>
  .container {
    max-width: 600px;
    margin: 0 auto;
    padding: 2rem 1rem;
    position: relative;
  }

  header {
    text-align: center;
    margin-bottom: 2.5rem;
  }

  .profile-container {
    width: 130px;
    height: 130px;
    margin: 0 auto 1rem;
    padding: 5px;
    background: linear-gradient(45deg, var(--card-border), var(--gradient-2));
    border-radius: 50%;
    animation: rotate 10s linear infinite;
  }

  .profile-img {
    width: 100%;
    height: 100%;
    border-radius: 50%;
    border: 3px solid var(--bg-color);
    object-fit: fixed;
  }

  @keyframes rotate {
    from {
      transform: rotate(0deg);
    }
    to {
      transform: rotate(360deg);
    }
  }

  h1 {
    font-size: 2rem;
    margin-bottom: 0.5rem;
    font-weight: 700;
    background: linear-gradient(45deg, var(--card-border), var(--text-color));
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
  }

  p {
    font-size: 1.1rem;
    opacity: 0.9;
  }

  footer {
    margin-top: 2.5rem;
    text-align: center;
    font-size: 1rem;
  }

  @media (max-width: 480px) {
    .container {
      padding: 1rem;
    }

    .profile-container {
      width: 110px;
      height: 110px;
    }
  }
</style>