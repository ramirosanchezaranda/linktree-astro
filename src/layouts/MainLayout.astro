---
import '@fontsource/inter/400.css';
import '@fontsource/inter/700.css';

interface Props {
  title: string;
}

const { title } = Astro.props;
---

<html lang="es">
  <head>
    <meta charset="utf-8" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />
    <link href="https://cdn.jsdelivr.net/npm/remixicon@4.1.0/fonts/remixicon.css" rel="stylesheet"/>
    <title>{title}</title>
  </head>
  <body>
    <div class="y2k-background"></div>
    <slot />
  </body>
</html>

<style is:global>
  :root[data-theme="light"] {
    --bg-color: #f7f7f7;
    --text-color: #000000;
    --card-bg: rgba(255, 255, 255, 0.8);
    --card-border: #181818;
    --gradient-1: #868686;
    --gradient-2: #9c9c9c;
    --gradient-3: #f0f0f0;
  }
  :root[data-theme="dark"] {
  --bg-color: #0d001a; /* Fondo oscuro intenso */
  --text-color: #e6e6ff; /* Texto en blanco con un leve tono cálido */
  --card-bg: rgba(14, 14, 14, 0.9); /* Fondo de tarjetas más sutil */
  --card-border: #2e2e2e; /* Borde brillante para resaltar */
  --gradient-1: #2c2c2c; /* Primer color del degradado, fondo primario */
  --gradient-2: #0c0b0c; /* Segundo color del degradado */
  --gradient-3: #161518; /* Tercer color del degradado para un efecto llamativo */
  --accent-color: #1b1a1b; /* Color de acento para botones o enlaces */
  --hover-color: #0a070a; /* Efecto hover para resaltar */
  --muted-text: #c2c2c2; /* Texto secundario más apagado */
  --shadow-color: rgba(0, 0, 0, 0.5); /* Sombras para dar profundidad */
}


  * {
    margin: 0;
    padding: 0;
    box-sizing: border-box;
    font-family: 'Inter', sans-serif;
  }

  body {
    color: var(--text-color);
    transition: all 0.3s;
    min-height: 100vh;
    position: relative;
  }

  .y2k-background {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: linear-gradient(
      45deg,
      var(--gradient-1),
      var(--gradient-2),
      var(--gradient-3)
    );
    background-size: 400% 400%;
    animation: gradient 15s ease infinite;
    z-index: -1;
  }

  @keyframes gradient {
    0% {
      background-position: 0% 50%;
    }
    50% {
      background-position: 100% 50%;
    }
    100% {
      background-position: 0% 50%;
    }
  }
</style>